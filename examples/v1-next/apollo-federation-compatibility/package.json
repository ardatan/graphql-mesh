{
  "name": "example-apollo-federation-compatibility",
  "version": "1.8.5",
  "description": "Apollo Federation implemented with GraphQL Mesh",
  "author": "Arda TANRIKULU <ardatanrikulu@gmail.com>",
  "private": true,
  "main": "dist/index.js",
  "scripts": {
    "build": "node scripts/bundle.js",
    "check": "tsc --pretty --noEmit",
    "mesh:compose": "mesh-compose --subgraph products > schema.graphql",
    "mesh:serve": "mesh-serve --subgraph schema.graphql --host 0.0.0.0 --port 4001",
    "service:codegen": "graphql-codegen",
    "service:start": "tsx src/index.ts",
    "start": "node bundle.js"
  },
  "dependencies": {
    "@graphql-hive/gateway": "^2.1.23",
    "@graphql-yoga/plugin-apollo-inline-trace": "3.17.1",
    "concurrently": "9.2.1",
    "graphql": "16.12.0",
    "graphql-yoga": "^5.17.1",
    "tslib": "2.8.1",
    "tsx": "^4.21.0"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "6.1.0",
    "@graphql-codegen/typescript": "5.0.7",
    "@graphql-codegen/typescript-resolvers": "5.1.5",
    "@graphql-mesh/compose-cli": "1.5.5",
    "@types/node": "^24.10.2",
    "esbuild": "^0.27.1",
    "lru-cache": "patch:lru-cache@npm%3A11.2.1#~/.yarn/patches/lru-cache-npm-11.2.1-60cdd96af2.patch"
  }
}
