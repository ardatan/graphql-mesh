{
  "name": "example-apollo-federation-compatibility",
  "version": "1.4.3",
  "description": "Apollo Federation implemented with GraphQL Mesh",
  "author": "Arda TANRIKULU <ardatanrikulu@gmail.com>",
  "private": true,
  "main": "dist/index.js",
  "scripts": {
    "build": "node scripts/bundle.js",
    "check": "tsc --pretty --noEmit",
    "mesh:compose": "mesh-compose --subgraph products > schema.graphql",
    "mesh:serve": "mesh-serve --subgraph schema.graphql --host 0.0.0.0 --port 4001",
    "service:codegen": "graphql-codegen",
    "service:start": "tsx src/index.ts",
    "start": "node bundle.js"
  },
  "dependencies": {
    "@graphql-hive/gateway": "1.4.11",
    "@graphql-yoga/plugin-apollo-inline-trace": "3.8.0",
    "concurrently": "9.1.0",
    "graphql": "16.9.0",
    "graphql-yoga": "5.8.0",
    "tslib": "2.8.1",
    "tsx": "^4.16.5"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "5.0.3",
    "@graphql-codegen/typescript": "4.1.1",
    "@graphql-codegen/typescript-resolvers": "4.4.0",
    "@graphql-mesh/compose-cli": "1.1.7",
    "@types/node": "22.9.0",
    "esbuild": "^0.24.0",
    "lru-cache": "11.0.2"
  }
}
