{
  "compilerOptions": {
    "lib": [
      "es2015",
      "esnext.asynciterable",
      "dom"
    ],
    "target": "ES6",
    "module": "commonjs",
    "sourceMap": true,
    "declaration": true,
    "rootDir": "src",
    "outDir": "build",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": [
    "src/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
