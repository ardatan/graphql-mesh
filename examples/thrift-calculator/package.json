{
  "name": "@examples/thrift-calculator",
  "license": "MIT",
  "private": true,
  "main": "build/main.js",
  "scripts": {
    "codegen": "thrift-typescript --target thrift-server --sourceDir ./src --outDir ./src/codegen",
    "start": "concurrently \"npm run start:thrift\" \"npm run start:mesh\"",
    "start:mesh": "mesh dev",
    "start:thrift": "ts-node src/main.ts"
  },
  "dependencies": {
    "@creditkarma/thrift-server-core": "1.0.4",
    "@creditkarma/thrift-server-express": "1.0.4",
    "@creditkarma/thrift-typescript": "3.7.6",
    "@graphql-mesh/cli": "0.100.23",
    "@graphql-mesh/thrift": "0.106.22",
    "@types/express": "5.0.6",
    "@types/node": "^25.0.9",
    "express": "5.2.1",
    "graphql": "16.12.0",
    "thrift": "0.22.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.2"
  },
  "devDependencies": {
    "concurrently": "9.2.1"
  }
}
