{
  "compilerOptions": {
    "incremental": true,

    "outDir": "dist",
    "baseUrl": ".",

    "target": "es2018",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": ["esnext"],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "declaration": true,

    "suppressImplicitAnyIndexErrors": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,

    "paths": {
      "@graphql-mesh/cli": ["packages/cli/src/index.ts"],
      "@graphql-mesh/runtime": ["packages/runtime/src/index.ts"],
      "@graphql-mesh/config": ["packages/config/src/index.ts"],
      "@graphql-mesh/utils": ["packages/utils/src/index.ts"],
      "@graphql-mesh/cache-*": ["packages/cache/*/src/index.ts"],
      "@graphql-mesh/handler-*": ["packages/handlers/*/src/index.ts"],
      "@graphql-mesh/*": ["packages/handlers/*/src/index.ts"],
      "@graphql-mesh/transform-*": ["packages/transforms/*/src/index.ts"],
      "@graphql-mesh/merger-*": ["packages/mergers/*/src/index.ts"]
    }
  },
  "include": ["packages"],
  "exclude": ["**/node_modules", "**/dist"]
}
