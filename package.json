{
  "name": "graphql-mesh",
  "license": "MIT",
  "private": true,
  "scripts": {
    "build:website": "yarn build && cd website && yarn build:prod",
    "prebuild": "graphql-to-config-schema --schema ./**/yaml-config.graphql --json ./packages/types/src/config-schema.json --typings ./packages/types/src/config.ts --markdown ./website/docs/generated-markdown/",
    "build": "tsc --project tsconfig.build.json && bob build",
    "copy-config-schema": "cp ./packages/types/src/config-schema.json ./packages/types/dist/",
    "fix-bin": "node scripts/fix-bin.js",
    "copy-playground-html": "cp ./packages/cli/src/commands/playground.html ./packages/cli/dist",
    "postbuild": "yarn copy-config-schema && yarn copy-playground-html && yarn fix-bin",
    "lint": "eslint --ext .ts ./packages/**/src/*.ts",
    "prettier": "prettier --ignore-path .gitignore --write --list-different \"**/*.{ts,tsx,graphql,yml}\"",
    "prettier:check": "prettier --ignore-path .gitignore --check \"**/*.{ts,tsx,graphql,yml}\"",
    "test": "jest --no-watchman",
    "test-and-build": "yarn build && yarn test",
    "prerelease": "yarn test-and-build",
    "preci:release": "yarn test-and-build",
    "release": "lerna publish --exact --force-publish=\"*\"",
    "ci:release": "lerna publish --exact --force-publish=\"*\" --yes --repo-version=$NPM_VERSION --no-git-tag-version",
    "ci:release:canary": "lerna publish --force-publish=\"*\" --preid \"alpha-`git rev-parse --short HEAD`\" --canary --exact --yes"
  },
  "devDependencies": {
    "@types/jest": "25.2.1",
    "@types/node": "13.13.0",
    "jest": "25.2.7",
    "ts-jest": "25.4.0",
    "ts-node-dev": "1.0.0-pre.44",
    "typescript": "3.8.3",
    "@typescript-eslint/eslint-plugin": "2.28.0",
    "@typescript-eslint/parser": "2.28.0",
    "bob-the-bundler": "1.0.0-rc.14",
    "eslint": "6.8.0",
    "eslint-config-prettier": "6.10.1",
    "eslint-config-standard": "14.1.1",
    "eslint-plugin-import": "2.20.2",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-promise": "4.2.1",
    "eslint-plugin-standard": "4.0.1",
    "fs-extra": "9.0.0",
    "graphql": "15.0.0",
    "graphql-to-config-schema": "0.0.16",
    "lerna": "3.20.2",
    "lint-staged": "10.1.5",
    "husky": "4.2.5",
    "prettier": "2.0.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "packages/**/src/**/*.{ts,tsx}": [
      "eslint --fix"
    ],
    "**/*.{ts,tsx,graphql,yml}": [
      "prettier --write"
    ]
  },
  "workspaces": [
    "./packages/*",
    "./packages/cache/*",
    "./packages/handlers/*",
    "./packages/transforms/*",
    "./examples/*",
    "./website"
  ],
  "resolutions": {
    "graphql": "15.0.0"
  }
}