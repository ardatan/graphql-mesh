{
  "name": "@graphql-mesh/serve-cli",
  "version": "0.8.1",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "ardatan/graphql-mesh",
    "directory": "packages/serve-cli"
  },
  "license": "MIT",
  "engines": {
    "node": ">=16.0.0"
  },
  "bin": {
    "mesh-serve": "dist/esm/bin.js"
  },
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "exports": {
    ".": {
      "require": {
        "types": "./dist/typings/index.d.cts",
        "default": "./dist/cjs/index.js"
      },
      "import": {
        "types": "./dist/typings/index.d.ts",
        "default": "./dist/esm/index.js"
      },
      "default": {
        "types": "./dist/typings/index.d.ts",
        "default": "./dist/esm/index.js"
      }
    },
    "./package.json": "./package.json"
  },
  "typings": "dist/typings/index.d.ts",
  "scripts": {
    "bundle": "(rm -rf bundle || true) && rollup -c && yarn inject-version",
    "inject-version": "tsx scripts/inject-version.ts"
  },
  "peerDependencies": {
    "@parcel/watcher": "^2.1.0",
    "graphql": "*"
  },
  "peerDependenciesMeta": {
    "@parcel/watcher": {
      "optional": true
    }
  },
  "dependencies": {
    "@commander-js/extra-typings": "^12.0.1",
    "@graphql-mesh/cross-helpers": "^0.4.4",
    "@graphql-mesh/serve-runtime": "^0.5.2",
    "@graphql-mesh/types": "^0.99.2",
    "@graphql-mesh/utils": "^0.99.2",
    "@graphql-tools/utils": "^10.2.3",
    "commander": "^12.0.0",
    "dotenv": "^16.3.1",
    "jiti": "^1.21.6",
    "json-bigint-patch": "^0.0.8",
    "spinnies": "^0.5.1"
  },
  "optionalDependencies": {
    "node-libcurl": "^4.0.0",
    "uWebSockets.js": "uNetworking/uWebSockets.js#semver:^20"
  },
  "devDependencies": {
    "@parcel/watcher": "^2.3.0",
    "@rollup/plugin-commonjs": "^26.0.1",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-sucrase": "^5.0.2",
    "@types/spinnies": "^0.5.3",
    "rollup": "^4.18.1",
    "rollup-plugin-tsconfig-paths": "^1.5.2",
    "tsx": "^4.16.2"
  },
  "publishConfig": {
    "access": "public",
    "directory": "dist"
  },
  "sideEffects": false,
  "buildOptions": {
    "bin": {
      "mesh-compose": {
        "input": "src/bin.ts"
      }
    },
    "./package.json": "./package.json"
  },
  "typescript": {
    "definition": "dist/typings/index.d.ts"
  }
}
