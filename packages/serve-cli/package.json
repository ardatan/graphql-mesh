{
  "name": "@graphql-mesh/serve-cli",
  "version": "0.11.5",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "ardatan/graphql-mesh",
    "directory": "packages/serve-cli"
  },
  "license": "MIT",
  "engines": {
    "node": ">=16.0.0"
  },
  "bin": {
    "mesh-serve": "dist/esm/bin.js"
  },
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "exports": {
    ".": {
      "require": {
        "types": "./dist/typings/index.d.cts",
        "default": "./dist/cjs/index.js"
      },
      "import": {
        "types": "./dist/typings/index.d.ts",
        "default": "./dist/esm/index.js"
      },
      "default": {
        "types": "./dist/typings/index.d.ts",
        "default": "./dist/esm/index.js"
      }
    },
    "./package.json": "./package.json"
  },
  "typings": "dist/typings/index.d.ts",
  "scripts": {
    "bundle": "(rm -rf bundle || true) && rollup -c",
    "inject-version": "tsx scripts/inject-version.ts",
    "start": "tsx src/bin.ts"
  },
  "peerDependencies": {
    "@parcel/watcher": "^2.1.0",
    "graphql": "*"
  },
  "peerDependenciesMeta": {
    "@parcel/watcher": {
      "optional": true
    }
  },
  "dependencies": {
    "@commander-js/extra-typings": "^12.1.0",
    "@graphql-mesh/cross-helpers": "^0.4.6",
    "@graphql-mesh/include": "^0.1.0",
    "@graphql-mesh/serve-runtime": "^0.8.5",
    "@graphql-mesh/types": "^0.102.4",
    "@graphql-mesh/utils": "^0.102.4",
    "@graphql-tools/utils": "^10.5.3",
    "commander": "^12.0.0",
    "dotenv": "^16.3.1",
    "json-bigint-patch": "^0.0.8",
    "parse-duration": "^1.1.0"
  },
  "optionalDependencies": {
    "node-libcurl": "^4.0.0",
    "uWebSockets.js": "uNetworking/uWebSockets.js#semver:^20"
  },
  "devDependencies": {
    "@parcel/watcher": "^2.3.0",
    "@rollup/plugin-commonjs": "^26.0.1",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-sucrase": "^5.0.2",
    "rollup": "^4.18.1",
    "rollup-plugin-tsconfig-paths": "^1.5.2",
    "tsx": "^4.16.5"
  },
  "publishConfig": {
    "access": "public",
    "directory": "dist"
  },
  "sideEffects": false,
  "buildOptions": {
    "bin": {
      "mesh-compose": {
        "input": "src/bin.ts"
      }
    },
    "./package.json": "./package.json"
  },
  "typescript": {
    "definition": "dist/typings/index.d.ts"
  }
}
