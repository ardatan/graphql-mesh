{
  "name": "@graphql-hive/gateway",
  "version": "0.1.2",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "ardatan/graphql-mesh",
    "directory": "packages/hive-gateway"
  },
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "bin": {
    "hive-gateway": "dist/esm/bin.js"
  },
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "exports": {
    ".": {
      "require": {
        "types": "./dist/typings/index.d.cts",
        "default": "./dist/cjs/index.js"
      },
      "import": {
        "types": "./dist/typings/index.d.ts",
        "default": "./dist/esm/index.js"
      },
      "default": {
        "types": "./dist/typings/index.d.ts",
        "default": "./dist/esm/index.js"
      }
    },
    "./package.json": "./package.json"
  },
  "typings": "dist/typings/index.d.ts",
  "scripts": {
    "bundle": "(rm -rf bundle || true) && rollup -c && rollup -c rollup.binary.config.js",
    "inject-version": "tsx scripts/inject-version.ts",
    "package-binary": "tsx scripts/package-binary.ts",
    "start": "tsx src/bin.ts"
  },
  "peerDependencies": {
    "@parcel/watcher": "^2.1.0",
    "graphql": "*"
  },
  "peerDependenciesMeta": {
    "@parcel/watcher": {
      "optional": true
    }
  },
  "dependencies": {
    "@graphql-mesh/serve-cli": "^0.12.2",
    "@graphql-mesh/serve-runtime": "^0.9.2",
    "@graphql-mesh/utils": "^0.102.5"
  },
  "optionalDependencies": {
    "uWebSockets.js": "uNetworking/uWebSockets.js#semver:^20"
  },
  "devDependencies": {
    "@parcel/watcher": "^2.3.0",
    "@rollup/plugin-commonjs": "^26.0.1",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-sucrase": "^5.0.2",
    "@types/adm-zip": "^0.5.5",
    "adm-zip": "^0.5.15",
    "rollup": "^4.18.1",
    "rollup-plugin-tsconfig-paths": "^1.5.2",
    "tsx": "^4.16.5"
  },
  "publishConfig": {
    "access": "public",
    "directory": "dist"
  },
  "sideEffects": false,
  "buildOptions": {
    "bin": {
      "hive-gateway": {
        "input": "src/bin.ts"
      }
    },
    "./package.json": "./package.json"
  },
  "typescript": {
    "definition": "dist/typings/index.d.ts"
  }
}
